function alltrim($string)
{
  $aux = rtrim(ltrim($string));
  $pos = strpos($aux,"  ");
  while ($pos !== false) {
    $aux = str_replace("  "," ",$aux);
    $pos = strpos($aux,"  ");
  }
  return $aux;
}

